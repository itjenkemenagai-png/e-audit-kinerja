{
  "name": "e-audit-kinerja",
  "version": "1.0.8",
  "description": "Aplikasi E-Audit Kinerja Desktop untuk Itjen Kemenag",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "Inspektorat Jenderal Kemenag",
  "license": "ISC",
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.kemenag.eaudit",
    "productName": "E-Audit Kinerja",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "icon.png"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "itjenkemenagai-png",
      "repo": "e-audit-kinerja"
    }
  }
}
